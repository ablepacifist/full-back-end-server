# Environment Configuration Template
# Copy this file and customize for your environment

#===================================
# FRONTEND (Lexicon React App)
#===================================

# Backend API URLs
# Development: use localhost
# Production: use your playit.gg tunnel URLs
REACT_APP_API_URL=http://localhost:8080
REACT_APP_LEXICON_API_URL=http://localhost:36568

# Frontend URL
REACT_APP_FRONTEND_URL=http://localhost:3000

# Environment
REACT_APP_ENV=development

# Frontend Port
PORT=3000

#===================================
# BACKEND - AlchemyServer
#===================================

# Server Configuration
ALCHEMY_PORT=8080
SERVER_ADDRESS=0.0.0.0

# CORS Configuration
# Development: localhost
# Production: your playit.gg frontend tunnel URL
# Multiple origins: comma-separated (no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DATABASE_URL=jdbc:hsqldb:hsql://localhost:9002/mydb

#===================================
# BACKEND - LexiconServer
#===================================

# Server Configuration
LEXICON_PORT=36568

# CORS Configuration (same as above)
# Note: lexiconServer uses dots instead of dashes
# Multiple origins: comma-separated (no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB
MAX_REQUEST_SIZE=100MB

# yt-dlp cookies (optional, for age-restricted content)
YTDLP_COOKIES_PATH=

#===================================
# PRODUCTION EXAMPLE
#===================================
# Replace these with your actual playit.gg tunnel URLs:
#
# REACT_APP_API_URL=https://your-alchemy-abc123.playit.gg
# REACT_APP_LEXICON_API_URL=https://your-lexicon-xyz789.playit.gg
# REACT_APP_FRONTEND_URL=https://your-frontend-def456.playit.gg
# CORS_ALLOWED_ORIGINS=https://your-frontend-def456.playit.gg
